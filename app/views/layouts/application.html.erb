      </nav>
    </header>

    <% if flash[:success].present? %>
     <div class="flash-success">
       <%= flash[:success] %>
    </div>
    <% end %>
    <main>
    <%= yield %>
    </main>

    <footer>
      Copyright 2017
    </footer>
  </body>
</html>
