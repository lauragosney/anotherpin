<h2>My cart</h2>

<% if @current_cart.order_items.any? %>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @current_cart.order_items.each do |item| %>

    <tr>
      <td><%= image_tag item.product.image_1.thumb %></td>
      <td><%= item.product.title %></td>
      <td><%= item.product.price %></td>
      <td><%= simple_form_for [item.product, item] do |f| %>
            <%= f.input :quantity %>
            <%= f.button :submit, "Update cart"%>
        <% end %>
      </td>
      <td><%= link_to "Remove", product_order_item_path(item.product, item), method: :delete %></td>

    </tr>

    <% end %>
  </tbody>
</table>

<p> <%= link_to "Continue to checkout", new_order_path %> </p>

<% else %>
  <p> There are no items in your cart</p>
<% end %>
